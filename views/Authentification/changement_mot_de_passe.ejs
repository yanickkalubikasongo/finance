<!DOCTYPE html>
<html lang="fr">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Connexion</title>

    <!-- Custom fonts for this template-->
    <link href="/static/login/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/static/login/css/sb-admin-2.min.css" rel="stylesheet">

    <style>
        /* Styles pour le spinner et les messages */
        .spinner {
            display: none;
            width: 40px;
            height: 40px;
            border: 4px solid rgba(20, 13, 117, 0.733);
            border-top-color: #ff6600;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 20px auto;
        }
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
        .success-message, .error-message {
            display: none;
            margin: 10px;
            text-align: center;
            padding: 10px;
            border-radius: 5px;
        }
        .success-message {
            background-color: #13db41;
            color: white;
        }
        .error-message {
            background-color: #fa1313;
            color: white;
        }

        .input-group {
            position: relative;
            margin-bottom: 1rem;
        }
        .input-group i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
        }
        .form-control {
            padding-left: 40px;
        }
        .eye-icon {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
        }
        .user-icon {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
        }
          /* Progression bar (barre de progression en haut de la page) */
          #progress-bar {
            height: 5px;
            background: linear-gradient(90deg, #00ff37, #ff3300, #000E38);
            width: 0;
        }
    </style>

</head>

<body style="background-color: #ff6600;"><br>
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-10 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5" style="background-image: url('/static/login/img/card2.png'); background-size: cover; background-position: center; background-repeat: no-repeat;">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                            <div style="background-color: #696666;" class="card-header py-3">
                                <h4 class="m-0 font-weight-bold text-center" style="color: #f5f6f8;">FINUSECO Backoffice !</h4>
                            </div>
                        <div class="row">
                            <div class="col-lg-6"><img style="margin-top: 47px;margin-left: 50px;width: 450px;height: 160px;" src="/static/login/img/loanme.png" alt="logo de l'agence"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <form class="new_mdp" id="loginForm" method="post" action="/create_new_mdp">                       
                                        <div style="background-color: #000e38;" class="card-header py-3">
                                            <h4 class="m-0  text-center" style="color: #f5f6f8;">Changer mot de passe !</h4>
                                            
                                            <div class="text-center">
                                                <div class="form-group">
                                                    <input type="text" class="form-control bg-light border-0 small" name="pseudo" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Pseudo">
                                                </div>
                                                <div class="form-group">
                                                    <input type="password" name="mdp" class="form-control bg-light border-0 small" id="nou_mdp" placeholder="Ancien Mot de Passe">
                                                </div>
                                                <div class="form-group">
                                                    <input type="password" id="new_mdp" name="new_mdp" class="form-control bg-light border-0 small" placeholder="Nouveau Mot de Passe">
                                                </div>
                                                <div class="form-group">
                                                    <input type="password" id="repete_mdp" name="mdp_confirm" class="form-control bg-light border-0 small" placeholder="Répété Mot de Passe">
                                                </div>
                                                <% if(typeof msg !== 'undefined'){ %>
                                                    <span id="erreur_rep_nouveau_mdp" style="color: brown;"><%= msg %></span>
                                                <% } %>
                                                <button type="submit" class="btn btn-user btn-block" style="background-color: #ff6600;color: white;">
                                                    <i class="fas fa-edit-in-alt"></i>&nbsp;Modifier
                                                </button>
                                                <div id="spinner" class="spinner"></div>
                                                <div id="successMessage" class="success-message">Mot de passe changé avec succès !</div>
                                                <div id="errorMessage" class="error-message">Erreur : Pseudo ou mot de passe incorrect.</div>
                                                <% if(typeof message_alerte_authent !== 'undefined'){ %>
                                                    <h6 id="erreur" style="color: red;"><%= message_alerte_authent %></h6>
                                                <% } %>
                                            </div>
                                            <div class="text-center">
                                                <a class="small" href="/help">Aide et assistance !</a>
                                            </div>
                                        </div>
                                    </form>
                                    <h6 class="m-0 text-center" style="color: #fcfdff;">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

     <!-- Bootstrap core JavaScript-->
     <script src="/static/login/vendor/jquery/jquery.min.js"></script>
     <script src="/static/login/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
 
     <!-- Core plugin JavaScript-->
     <script src="/static/login/vendor/jquery-easing/jquery.easing.min.js"></script>
 
     <!-- Custom scripts for all pages-->
     <script src="/static/login/js/sb-admin-2.min.js"></script>
 
     <!-- JavaScript pour afficher le spinner et les messages -->
     <script>
         const form = document.getElementById('loginForm');
         const spinner = document.getElementById('spinner');
         const successMessage = document.getElementById('successMessage');
         const errorMessage = document.getElementById('errorMessage');
         const passwordInput = document.getElementById('exampleInputPassword');
         const togglePassword = document.getElementById('togglePassword');
 
         form.addEventListener('submit', function (event) {
             // Afficher le spinner et cacher les messages
             spinner.style.display = 'block';
             successMessage.style.display = 'none';
             errorMessage.style.display = 'none';
 
             // Arrêter la soumission du formulaire pendant un moment
             event.preventDefault();
 
             // Simuler une connexion (remplacer par ta logique de validation réelle)
             setTimeout(function () {
                 spinner.style.display = 'none';
 
                 // Laisser le formulaire se soumettre après 2 secondes si la connexion réussit
                 if (true) {  // Remplace 'true' par ta logique de validation pour tester si la connexion réussit
                     successMessage.style.display = 'block';
                     setTimeout(function () {
                         form.submit();  // Soumettre le formulaire après la simulation de validation
                     }, 2000);  // Délai avant redirection
                 } else {
                     errorMessage.style.display = 'block';
                 }
             }, 3000);
         });
 
         // Toggle afficher/cacher mot de passe
         togglePassword.addEventListener('click', function () {
             const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
             passwordInput.setAttribute('type', type);
             this.classList.toggle('fa-eye-slash');  // Basculer entre l'icône 'fa-eye' et 'fa-eye-slash'
         });
     </script>
     <script src="//code.tidio.co/fiivozwggwjeugddm1a2hpwv3aznyvtc.js" async>
    </script>
 
 </body>
 
 </html>